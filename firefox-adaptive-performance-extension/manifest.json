{
  "manifest_version": 2,
  "name": "Firefox Adaptive Performance Extension",
  "version": "1.0.0",
  "description": "A React-based Firefox extension",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Firefox Adaptive Performance"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}

