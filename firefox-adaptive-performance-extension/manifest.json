{
  "manifest_version": 2,
  "name": "Firefox Adaptive Performance Extension",
  "version": "1.0.0",
  "description": "A React-based Firefox extension",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Firefox Adaptive Performance"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/performance-monitor.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/timer-tracker.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "<all_urls>"
  ]
}

